{
	"name": "@chillwhales/lsps",
	"private": true,
	"description": "LUKSO Standards Packages â€” TypeScript implementations of LSP standards",
	"scripts": {
		"build": "pnpm -r build",
		"test": "vitest run",
		"clean": "pnpm -r clean",
		"preinstall": "npx only-allow pnpm",
		"check:lint": "biome check",
		"check:lint:fix": "biome check --write",
		"knip": "knip",
		"sherif": "sherif",
		"madge": "madge --circular --extensions ts --exclude '\\.test\\.ts$' --ts-config ./packages/config/tsconfig.base.json packages/*/src",
		"deps:graph": "pnpm madge --image deps-graph.svg",
		"check": "pnpm check:lint && pnpm sherif && pnpm knip && pnpm madge",
		"prepare": "simple-git-hooks"
	},
	"simple-git-hooks": {
		"pre-commit": "npx @biomejs/biome check --write --staged --files-ignore-unknown=true --no-errors-on-unmatched && git update-index --again",
		"commit-msg": "npx commitlint --edit $1"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.4.4",
		"@commitlint/cli": "^20.4.2",
		"@commitlint/config-conventional": "^20.4.2",
		"@vitest/coverage-v8": "^4.0.18",
		"knip": "^5.85.0",
		"madge": "^8.0.0",
		"only-allow": "^1.2.2",
		"sherif": "^1.10.0",
		"simple-git-hooks": "^2.13.1",
		"vitest": "catalog:"
	},
	"sherif": {
		"failOnWarnings": true
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"simple-git-hooks"
		]
	},
	"packageManager": "pnpm@10.30.2",
	"engines": {
		"node": ">=18"
	}
}
